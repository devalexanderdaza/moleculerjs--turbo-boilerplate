{
  "name": "moleculer-microservices-boilerplate",
  "version": "1.0.0",
  "description": "A highly customizable MoleculerJS microservices boilerplate with hexagonal architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "moleculer",
    "microservices",
    "typescript",
    "hexagonal",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "awilix": "^8.0.1",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "moleculer": "^0.14.31",
    "moleculer-decorators": "^1.3.0",
    "moleculer-web": "^0.10.6",
    "pino": "^8.16.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}